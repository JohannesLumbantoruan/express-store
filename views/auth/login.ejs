<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="login-form" action="/login" method="POST">
            <% if (Boolean(errorMessage.length)) { %>
                <div class="alert alert-danger" role="alert">
                    <%= errorMessage %>
                </div>
            <% } %>

            <% if (Boolean(errorValidation.length)) { %>
                <div class="alert alert-danger" role="alert">
                    <%- errorValidation %>
                </div>
            <% } %>

            <div class="form-control">
                <label for="email">E-Mail</label>
                <input type="email" name="email" id="email" value="<%= email %>" class="<%= invalid.find(err => err.path === 'email') ? 'border border-danger border-2' : '' %>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" class="<%= invalid.find(err => err.path === 'password') ? 'border border-danger border-2' : '' %>">
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit">Login</button>
            <div class="d-flex justify-content-end">
                <a href="/reset">Reset Password</a>
            </div>
        </form>
    </main>
<%- include('../includes/end.ejs') %>